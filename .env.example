# ========================================
# Employee Portal - Environment Variables
# ========================================

# Server Configuration
PORT=3002
NODE_ENV=production
SESSION_SECRET=your-random-secret-change-this-in-production

# CORS (comma-separated additional origins if needed)
CORS_ORIGIN=

# ========================================
# Zoho CRM OAuth
# ========================================
ZOHO_CLIENT_ID=1000.xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ZOHO_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ZOHO_ACCOUNTS_BASE=https://accounts.zoho.com
ZOHO_REDIRECT_URI=https://portal.timesharehelpcenter.com/oauth/callback
ZOHO_SCOPES=ZohoCRM.modules.deals.READ,ZohoCRM.users.READ

# After OAuth consent flow, copy the refresh token here:
ZOHO_REFRESH_TOKEN=1000.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Zoho CRM Field Configuration (for leaderboard)
STAGE_FIELD=Stage
WON_STAGES=Deal Submitted,Deal Sent,Deal Funded
DATE_FIELD=Closing_Date

# ========================================
# Microsoft 365 / Entra OAuth (Optional)
# ========================================
# Get these from Azure Portal > App Registrations
ENTRA_TENANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
ENTRA_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
ENTRA_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ENTRA_REDIRECT_URI=https://portal.timesharehelpcenter.com/oauth/o365/callback

# After OAuth consent flow, copy the refresh token here:
O365_REFRESH_TOKEN=1000.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
